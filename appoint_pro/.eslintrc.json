{
    "root": true,
    "extends": [
        "next/core-web-vitals",
        "plugin:@typescript-eslint/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "plugins": [
        "@typescript-eslint",
        "translations"
    ],
    "parserOptions": {
        "ecmaVersion": 2021,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "rules": {
        "translations/require-translation-key": "error",
        "translations/valid-translation-key": "error"
    },
    "settings": {
        "react": {
            "version": "detect"
        },
        "translations": {
            "localesPath": "./src/locales"
        }
    }
}